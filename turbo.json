{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "BASE_URL",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_URL_NON_POOLING",
    "AUTH_SECRET",
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET"
  ],
  "tasks": {
    "build": {
      "env": [],
      "dependsOn": ["^generate", "^ui:build", "^build"],
      "inputs": ["$TURBO_DEFAULT", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": false
    },
    "db:migrate:deploy": {},
    "db:push": {},
    "db:seed": {},
    "db:migrate:dev": {
      "env": ["POSTGRES_URL_NON_POOLING", "POSTGRES_PRISMA_URL"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^db:generate", "^build"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "cache": true
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": false
    },
    "ui:build": {
      "cache": false
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}

